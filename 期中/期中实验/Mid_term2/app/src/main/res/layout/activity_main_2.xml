<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Rla"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.administrator.mid_term.MainActivity">

    <com.administrator.mid_term.ArcMenu
        android:id="@+id/id_arcmenu2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        zhy:position="right_bottom"
        zhy:radius="130dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@mipmap/composer_button">

            <ImageView
                android:id="@+id/id_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/composer_icn_plus" />


        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView2"
            android:layout_centerVertical="true"
            android:src="@mipmap/guo"
            android:tag="Camera" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/wu"
            android:tag="Sun" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/cang"

            android:tag="Place" />


    </com.administrator.mid_term.ArcMenu>

    <ImageView
        android:id="@+id/perImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        zhy:srcCompat="@mipmap/icon" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:paddingTop="10dp"
        android:text="name"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/place"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/name"
        android:layout_marginTop="16dp"
        android:text="place"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/master"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/place"
        android:layout_marginTop="14dp"
        android:text="master"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/styOfperson"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/master"
        android:layout_marginTop="15dp"
        android:text="story" />

</RelativeLayout>
